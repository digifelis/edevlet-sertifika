FROM php:8.2-apache
RUN apt-get update && \
    apt-get install -y \
    libzip-dev \
    zip

RUN a2enmod rewrite
RUN docker-php-ext-install pdo_mysql zip

ENV APACHE_DOCUMENT_ROOT=/var/www/html/public
RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf
RUN sed -ri -e 's!/var/www/!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf
# Create or modify Apache configuration to set ServerName
RUN echo "ServerName localhost" >> /etc/apache2/apache2.conf
COPY . /var/www/html
WORKDIR /var/www/html
RUN chmod 777 -R /var/www/html/public/uploads/
RUN chown -R www-data:www-data /var/www/html/public/uploads/
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
CMD bash -c "composer install && composer update"
#RUN composer install
#RUN composer update

RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache /var/www/html/public/uploads

#CMD ["php", "-S", "0.0.0.0:80", "-t", "/var/www/html"]
